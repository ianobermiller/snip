<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Snip</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" href="@Links.Content.Images.favicon_ico" type="image/png"/>
    <link href="@Links.Content.Site_css" rel="stylesheet" type="text/css" />
    <link href="@Links.Content.font_awesome_min_css" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="Stylesheet" href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.10/themes/smoothness/jquery-ui.css" />
    <script src="http://ajax.cdnjs.com/ajax/libs/modernizr/1.7/modernizr-1.7.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Links.Scripts.NameControl_js"></script>
    @RenderSection("Title", false)
</head>
<body>
    <div id="wrap">
        <div id="bar">
            <header>
                <h1><a href="@Url.Content("~/")">snip</a></h1>
            </header>
            <nav>
                <ul>
                    <li><a href="@Url.Action(Mvc.User.Index())"><small>welcome,</small> @StringUtils.GetAliasFromQualifiedName(User.Identity.Name)</a></li>
                    <li>@Html.ActionLink("new snip", Mvc.Snippet.Add())</li>
                    <li>@Html.ActionLink("about", Mvc.Stats.Index())</li>
                    <li>@Html.ActionLink("my snips", Mvc.User.Index())</li>
                </ul>
            </nav>
        </div>

        <div id="page">
            @RenderBody()
        </div>

        <div class="push"><!-- sticky footer --></div>
    </div>

    <footer>Snip was created by @Html.AliasLink("iano").</footer>

    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.5.1.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.10/jquery-ui.js"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.js"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="@Links.Scripts.jquery_timeago_js"></script>
    <script type="text/javascript">
        $(function () {
            $("abbr.timeago").timeago();
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
